import pygame
from config import *

class Sidebar:
    @staticmethod
    def init():
        Sidebar.side_bar_l = pygame.Surface((220,SCREENSIZE[1]))
        Sidebar.side_bar_r = pygame.Surface((150,SCREENSIZE[1]))
        Sidebar.side_bar_l = Sidebar.side_bar_l.convert_alpha()
        Sidebar.side_bar_r = Sidebar.side_bar_r.convert_alpha()
        Sidebar.side_bar_l.fill((32,32,32,250))
        Sidebar.side_bar_r.fill((32,32,32,250))
