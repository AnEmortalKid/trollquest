package com.client.GUI;

import java.awt.event.KeyEvent;

/**
 * Controls for the game (i.e., what does what).
 * @author Ian
 */
public class Controls {
	/** Control to open/close the inventory. */
	public final static int OC_INVENTORY = KeyEvent.VK_I;
	/** Control to open/close the message pane. */
	public final static int OC_MESSAGES = KeyEvent.VK_M;
	/** Control to open/close the quests pane. */
	public final static int OC_QUESTS = KeyEvent.VK_Q;
	/** Control to open/close the statistics pane. */
	public final static int OC_STATS = KeyEvent.VK_S;
	/** Control to open/close the merchant pane. */
	public static final int OC_MERCHANT = KeyEvent.VK_W;
	
	/** Control to open the close game dialog. */
	public final static int EXIT = KeyEvent.VK_ESCAPE;
	
	/** Control that, when held down, causes the player to move to attack. */
	public final static int HOLD_ATTACK = KeyEvent.VK_X;
	/** Control that, when held down, causes the player to move to cast. */
	public final static int HOLD_CAST = KeyEvent.VK_C;
	
	/** Control that, when in admin mode, steps the server. */
	public final static int SERVER_STEP = KeyEvent.VK_S;
	
	/** Control that selects spells upwards. */
  public final static int SELECT_SPELL_UP= KeyEvent.VK_DOWN;
	/** Control that selects spells downwards. */
  public final static int SELECT_SPELL_DOWN= KeyEvent.VK_UP;
}